/* pages/goods_list/index.wxss */
.search{
  background: #eee!important

}
.tab {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}

.active{
  color: red
}

.list navigator {
  width: 750rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px #ccc solid
}

image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.right {
  flex: 1;
  width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx
}

.content {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price text{
  font-size: 12px
}

/* 底部 */
.tips{
  color: #999;
  display: flex;
  justify-content: center;
  padding: 20rpx  
}