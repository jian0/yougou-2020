swiper {
  width: 750rpx;
  height: 750rpx;
}

.swiper-item image {
  width: 750rpx;
  height: 750rpx;
  flex-shrink: 0;
}

/* 商品详情 */

.goods_info {
  padding: 20rpx 0 19rpx 10rpx;
}

.goods_info_price {
  color: red;
  font-size: 20px;
}

.goods_info_des {
  display: flex;
  justify-content: space-between;
}

.goods_info_des_title {
  flex: 1;
  padding-right: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods_info_des_coll {
  padding: 0 40rpx;
  /* text-align: center; */
  border-left: 1px #ccc solid;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goods_info_des_collName {
  font-size: 13px;
}

/* 底部功能模块 */

.goods_bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
}

/* 左边 */

.goods_bottom_left {
  width: 40%;
  display: flex;
  justify-content: space-between;
}


/* 打开客服会话 */
.contact{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 20%;
  height: 100%;
  overflow: hidden;
  opacity: 0
}

.kefu {
  background: #fff;
  text-align: center;
  padding: 10rpx;
  flex: 1
}

.kefu_content {
  font-size: 13px;
}

/* 右边 */

.goods_bottom_right {
  width: 60%;
  display: flex;
  justify-content: space-between;
}

.goods_bottom_right :nth-child(2) {
  background: #eb4450;
  /* padding-left: 43rpx */
}

.add {
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding: 24rpx; */
  background: #f4b73f;
  color: #fff;
  font-size: 16px;
  width: 50%
}

.goods_detail {
  padding-bottom: 20rpx;
}

/* tab栏 */

.goods_detail_choose {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.item {
  width: 50%;
  text-align: center;
  font-size: 18px;
  padding: 20rpx 0;
  background: #ccc;
  margin-bottom: 10rpx;
}

.active {
  color: #fff;
  background: red;
}

.goods_detail_argument_title {
  text-align: center;
  font-size: 20px;
  padding: 20rpx 0;
}

.goods_detail_argument_des {
  height: 400rpx;
  overflow: auto;
}

.canshu {
  margin-bottom: 20rpx;
}

.goods_detail_argument_left {
  margin-right: 50rpx;
}

.goods_detail_argument_right {
  font-size: 14px;
  color: #f00;
}
