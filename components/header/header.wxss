/* components/header/header.wxss */

.search {
  background-color: #eb4450;
  padding: 10px;
  width: 100%;
  display: flex;
  text-align: center
}

.search-input {
  background-color: #fff;
  height: 60rpx;
  width: 700rpx;
  border: 1px #ccc solid;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center
}

.left {
  justify-content: flex-start;
}

.center {
  justify-content: center;
}

.right {
  justify-content: flex-end;
}
